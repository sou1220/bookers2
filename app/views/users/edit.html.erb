<main>
  <div class = "container">
    <div class = "row mx-auto justify-content-center ">
      <form>
        <div>
          <h1 class = "p-3">User info</h1>
          <%= form_with model: @user do |f| %>
          <div class = "form-group">
            <label for = "inputName">Name</label>
              <br><%= f.text_field :name, autofocus: true, id: "inputName", placeholder: "name", class: "form-control" %>
          </div>
          <div class = "form-group">
            <label for = "inputimage">Image</label>
              <br><%= f.file_field :profile_image, placeholder: "image", accept: "image/*" %>
          </div>
          <div class = "form-group">
            <label for = "inputIntroduction">Introduction</label>
              <br><%= f.text_field :introduction, id: "inputIntroduction", class: "form-control"  %>
          </div>
          <%= f.submit "Update User", class: "btn btn-secondary" %>
          </div>
      </form>
      <% end %>
    </div>
  </div>
</main>
