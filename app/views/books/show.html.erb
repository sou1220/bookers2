<%= flash[:notice] %>
<main>
<div class = "container px-5 px-sm-0">
  <div class = "row">
    <div class = "col-md-3">
      <%= render 'users/user', user: @book.user %>
      <%= render 'books/book', book: @book %>
    </div>
  <div class = "col-md-8 offset-md-1">
    <table class = "table table-image">
     <h1 class = "pt-4">Book detail</h1>
      <tbody>
        <tr>
        <td>
          <%= image_tag @user.get_profile_image(100,100) %>
            <p><%= link_to @book.user.name, user_path(@book.user.id) %></p>
        </td>
        <td><h4><%= link_to @book.title, book_path(@book.id) %></h4></td>
        <td><h4><%= @book.body %></h4></td>
          <% if @book.user.id == current_user.id %>
            <td><%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-success" %></td>
            <td><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか?", class: "btn btn-danger" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </main>
    <footer>
      <div class='container mt-5'>
        <div class='row'>
          <div class='mx-auto'>
          	<p>CopyRight Infratop.inc</p>
        	</div>
        </div>
      </div>
    </footer>
   </div>
  </div>
</div>